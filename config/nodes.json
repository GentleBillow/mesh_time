{
  "security": {
    "psk": "TrustTheDrift_NotTheWallClock"
  },

  "sync": {
    "ingest_ntp_every": 5,
    "ingest_mesh_clock_every": 5,
    "ingest_link_every": 10,
    "ingest_obs_link_every": 10,
    "ingest_diag_controller_every": 10,
    "ingest_diag_kalman_every": 10,
    "ingest_sensor_every": 5,

    "controller": "kalman",

    "max_slew_per_second_ms": 100,

    "coap_timeout_s": 1.2,
    "beacon_period_s": 1,
    "beacon_slot_ms": 50.0,
    "beacon_n_slots": 8,

    "min_beacons_for_warmup": 25,
    "min_samples_before_log": 10,
    "log_before_warmup": true,

    "jitter_window": 60,
    "min_samples_for_jitter": 30,

    "max_weight": 10000.0,

    "kalman": {
      "use_offset_gauge": true,
      "r_offset_gauge": 1,

      "use_bias_gauge": true,
      "r_bias_gauge": 50,

      "q_offset": 1e-8,
      "q_drift": 2e-12,
      "q_bias": 5e-8,

      "r_base": 2e-5,

      "adaptive_r": {
        "R_min": 8e-6,
        "c_rtt": 1
      }
    },

    "ui_window_s": 600,
    "ui_bin_s": 5,
    "ui_max_points": 1500
  },

  "A": {
    "ip": "172.16.32.171",
    "parent": "C",
    "telemetry_sink": "C",
    "neighbors": ["C", "B"],
    "led_pin": 5,
    "button_pin": 4,
    "disturbance_ms": 500.0
  },

  "C": {
    "ip": "172.16.32.136",
    "parent": null,
    "telemetry_sink": "C",
    "neighbors": ["A", "B"],
    "led_pin": 5,
    "button_pin": 4,
    "disturbance_ms": 500.0,
    "db_path": "/home/pi/mesh_time/mesh_data.sqlite",
    "sync": { "is_root": false }
  },

  "B": {
    "ip": "172.16.32.172",
    "parent": "C",
    "telemetry_sink": "C",
    "neighbors": ["A", "C"],
    "led_pin": 5,
    "button_pin": 4,
    "disturbance_ms": 500.0
  }
}
